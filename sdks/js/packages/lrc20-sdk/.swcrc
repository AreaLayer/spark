{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "jsx": false,
      "dynamicImport": false,
      "privateMethod": true,
      "functionBind": false,
      "exportDefaultFrom": false,
      "exportNamespaceFrom": false,
      "decorators": false,
      "decoratorsBeforeExport": false,
      "topLevelAwait": false,
      "importMeta": false
    },
    "baseUrl": ".",
    "transform": null,
    "target": "esnext",
    "loose": true,
    "externalHelpers": true,
    "keepClassNames": true,
    "preserveAllComments": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "experimental": {
      "plugins": [
          [
            "@swc/plugin-transform-imports",
            {
              "^(.*?)\\.ts(x)?$": {
                "skipDefaultConversion": true,
                "transform": "{{matches.[1]}}.js"
              }
            }
          ]
      ]
    }
  },
  "exclude": [
    "examples",
    "src/tests",
    ".test.ts"
  ],
  "minify": false,
  "sourceMaps": "inline"
}

