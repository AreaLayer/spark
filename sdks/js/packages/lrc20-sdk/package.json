{
  "name": "@buildonspark/lrc20-sdk",
  "type": "module",
  "version": "0.0.12",
  "exports": {
    ".": {
      "require": {
        "default": "./dist/cjs/index.js",
        "types": "./dist/types/index.d.ts"
      },
      "import": {
        "default": "./dist/esm/index.js",
        "types": "./dist/types/index.d.ts"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "yarn run build",
    "pre-commit-config": "npx husky install",
    "build": "yarn clean && yarn build:types && yarn build:cjs && yarn build:esm && yarn build:tsc-alias",
    "build:types": "tsc -p tsconfig.build.json --outDir ./dist/types --declaration --emitDeclarationOnly",
    "build:cjs": "npx swc src -d ./dist/cjs --strip-leading-paths --config-file .swcrc -C module.type=commonjs",
    "build:esm": "npx swc src -d ./dist/esm --strip-leading-paths --config-file .swcrc -C isModule=true -C module.type=es6 -C module.resolveFully=true",
    "build:tsc-alias": "node ./postbuild.js",
    "circular-deps": "madge --circular --extensions ts,tsx src",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no tests yet\"",
    "typecheck": "tsc --noEmit",
    "lint-fix": "npm run lint-ts-fix && npm run lint-js-fix && npm run lint-json-fix",
    "lint-ts-fix": "prettier --write \"./**/*.ts\"",
    "lint-js-fix": "prettier --write \"./**/*.js\"",
    "lint-json-fix": "prettier --write \"./[a-zA-Z0-9.]+(?!-lock).json\""
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.1.1",
    "@sapphire/utilities": "^3.17.0",
    "@swc/plugin-transform-imports": "^7.0.0",
    "bignumber.js": "^9.1.2",
    "bip65": "^1.0.3",
    "bitcoinjs-lib": "^6.1.5",
    "class-transformer": "^0.5.1",
    "ecpair": "^2.1.0",
    "stream": "^0.0.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.6",
    "@types/node": "^22.13.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "husky": "^7.0.2",
    "jest": "^29.7.0",
    "madge": "^8.0.0",
    "prettier": "^3.5.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browser": {
    "assert": false,
    "buffer": "buffer",
    "crypto": false,
    "fs": false,
    "fs/promises": false,
    "path": false,
    "url": false
  },
  "madge": {
    "detectiveOptions": {
      "ts": {
        "skipTypeImports": true
      },
      "tsx": {
        "skipTypeImports": true
      }
    }
  }
}
