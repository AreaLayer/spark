{
  "name": "@buildonspark/issuer-sdk",
  "version": "0.0.7",
  "description": "Spark Issuer SDK for token issuance",
  "module": "./dist/issuer-sdk.js",
  "types": "./dist/issuer-sdk.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/issuer-sdk.d.ts",
      "import": "./dist/issuer-sdk.js"
    },
    "./spark": {
      "types": "./dist/services/spark/wallet.d.ts",
      "require": "./dist/services/spark/wallet.d.ts",
      "import": "./dist/services/spark/wallet.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "build:watch": "yarn build --watch --clean=false",
    "clean": "rm -rf dist",
    "dev": "yarn build -- --watch",
    "docs": "typedoc src",
    "format:fix": "prettier src --write",
    "format": "prettier src --check",
    "lint:fix": "eslint --fix .",
    "lint:fix:continue": "eslint --fix . || exit 0",
    "lint:watch": "esw ./src -w --ext .ts,.tsx,.js --color",
    "lint": "eslint .",
    "postversion": "yarn build",
    "test-cmd": "node --experimental-vm-modules $(yarn bin jest) --no-cache --runInBand --bail",
    "test": "echo \"Error: no tests yet\"",
    "test:integration": "yarn test-cmd src/tests/integration/*.test.ts",
    "types:watch": "tsc-absolute --watch",
    "types": "tsc",
    "generate:proto": "PATH=\"$PATH:./node_modules/.bin\" protoc --ts_proto_out=./src/proto --ts_proto_opt=outputServices=nice-grpc,useExactTypes=false,outputServices=generic-definitions,oneof=unions,importSuffix=.js --proto_path=../../protos spark.proto mock.proto spark_authn.proto"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.2.3",
    "@buildonspark/lrc20-sdk": "0.0.5",
    "@buildonspark/spark-sdk": "0.0.7",
    "@grpc/grpc-js": "^1.12.5",
    "@noble/curves": "^1.8.0",
    "@noble/secp256k1": "^2.2.3",
    "@scure/btc-signer": "^1.5.0",
    "bitcoinjs-lib": "^6.1.5",
    "crypto-js": "^4.2.0",
    "grpc-tools": "^1.12.4",
    "nice-grpc": "^2.1.10",
    "nice-grpc-common": "^2.0.2",
    "nice-grpc-web": "^3.3.5",
    "protobufjs": "^7.4.0",
    "ts-proto": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.2",
    "@types/secp256k1": "^4.0.6",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "wasm-loader": "^1.3.0"
  },
  "browser": {
    "assert": false,
    "crypto": false,
    "fs": false,
    "fs/promises": false,
    "nice-grpc": "nice-grpc-web",
    "path": false,
    "url": false
  }
}
