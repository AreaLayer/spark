{
  "name": "@buildonspark/spark-sdk",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/spark-sdk.d.ts",
      "require": "./dist/spark-sdk.js",
      "import": "./dist/spark-sdk.js"
    },
    "./signer": {
      "types": "./dist/signer/signer.d.ts",
      "require": "./dist/signer/signer.js",
      "import": "./dist/signer/signer.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "require": "./dist/utils/index.js",
      "import": "./dist/utils/index.js"
    },
    "./token-transactions": {
      "types": "./dist/services/token-transactions.d.ts",
      "require": "./dist/services/token-transactions.js",
      "import": "./dist/services/token-transactions.js"
    },
    "./wasm": {
      "types": "./dist/wasm/spark_bindings.d.ts",
      "require": "./dist/wasm/spark_bindings.js",
      "import": "./dist/wasm/spark_bindings.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/types/index.js",
      "import": "./dist/types/index.js"
    },
    "./config": {
      "types": "./dist/services/config.d.ts",
      "require": "./dist/services/config.js",
      "import": "./dist/services/config.js"
    },
    "./connection": {
      "types": "./dist/services/connection.d.ts",
      "require": "./dist/services/connection.js",
      "import": "./dist/services/connection.js"
    },
    "./proto/spark": {
      "types": "./dist/proto/spark.d.ts",
      "require": "./dist/proto/spark.js",
      "import": "./dist/proto/spark.js"
    }
  },
  "scripts": {
    "build": "tsc && copyfiles -u 1 'src/wasm/**/*.wasm' dist/",
    "prepare": "npm run build",
    "build:watch": "yarn build --watch --clean=false",
    "clean": "rm -rf dist",
    "dev": "yarn build -- --watch",
    "docs": "typedoc src",
    "format:fix": "prettier src --write",
    "format": "prettier src --check",
    "lint:fix": "eslint --fix .",
    "lint:fix:continue": "eslint --fix . || exit 0",
    "lint:watch": "esw ./src -w --ext .ts,.tsx,.js --color",
    "lint": "eslint .",
    "postversion": "yarn build",
    "test-cmd": "node --experimental-vm-modules $(yarn bin jest) --no-cache --runInBand --bail",
    "test": "yarn test-cmd src/tests/*.test.ts",
    "test:integration": "yarn test-cmd src/tests/integration/*.test.ts",
    "types:watch": "tsc-absolute --watch",
    "types": "tsc",
    "generate:proto": "PATH=\"$PATH:./node_modules/.bin\" protoc --ts_proto_out=./src/proto --ts_proto_opt=outputServices=nice-grpc,useExactTypes=false,outputServices=generic-definitions,oneof=unions,importSuffix=.js --proto_path=../../protos spark.proto mock.proto spark_authn.proto"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.26.0",
    "@types/babel__preset-env": "^7",
    "@types/copyfiles": "^2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.2",
    "@types/secp256k1": "^4.0.6",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8",
    "babel-jest": "^29.7.0",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "wasm-loader": "^1.3.0"
  },
  "packageManager": "yarn@4.5.0+sha512.837566d24eec14ec0f5f1411adb544e892b3454255e61fdef8fd05f3429480102806bac7446bc9daff3896b01ae4b62d00096c7e989f1596f2af10b927532f39",
  "dependencies": {
    "@grpc/grpc-js": "^1.12.5",
    "@lightsparkdev/core": "^1.2.7",
    "@mempool/mempool.js": "^3.0.0",
    "@noble/curves": "^1.8.0",
    "@noble/secp256k1": "^2.2.3",
    "@scure/base": "^1.2.1",
    "@scure/bip32": "^1.6.2",
    "@scure/bip39": "^1.5.4",
    "@scure/btc-signer": "^1.5.0",
    "auto-bind": "^5.0.1",
    "buffer": "^6.0.3",
    "eciesjs": "^0.4.13",
    "grpc-tools": "^1.12.4",
    "light-bolt11-decoder": "^3.2.0",
    "long": "^5.2.4",
    "nice-grpc": "^2.1.10",
    "nice-grpc-web": "^3.3.5",
    "protobufjs": "^7.4.0",
    "react-toastify": "^11.0.5",
    "secp256k1": "^5.0.1",
    "ts-proto": "^2.6.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.0"
  },
  "browser": {
    "assert": false,
    "buffer": "buffer",
    "crypto": false,
    "fs": false,
    "fs/promises": false,
    "nice-grpc": "nice-grpc-web",
    "path": false,
    "url": false
  }
}
